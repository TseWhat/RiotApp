@model  RiotMVC.Models.SummonerModel

@{
    ViewBag.Title = "Home Page";
}


@section scripts 
{
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <script>
        var homeUrl = "@Href("~/Home")";
    </script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/app/home.js"></script>
    <script src="~/Scripts/flot/jquery.flot.min.js"></script>
    <script src="~/Scripts/flot/jquery.flot.pie.min.js"></script>
    <script src="~/Scripts/flot/jquery.flot.resize.min.js"></script>
    <script src="~/Scripts/flot/jquery.flot.selection.min.js"></script>
    <script src="~/Scripts/flot/jquery.flot.stack.min.js"></script>
    <script src="~/Scripts/flot/jquery.flot.symbol.min.js"></script>
    <script src="~/Scripts/flot/jquery.flot.threshold.min.js"></script>
    <script src="~/Scripts/flot/jquery.flot.time.min.js"></script>
}

<div style="min-height: 500px">
    <div class="tile-header">
        <div>
            <h1>Champion Stat Analyzer</h1>
        </div>
        <div class="row header-separator">
            <div class="col-md-12 form-group form-inline form-horizontal row" style="margin-top: 30px">
                <div class="col-md-4">
                    <label>Date</label>
                    <input id="date" type="date" name="date" data-date-end-date="d" class="form-control" />
                </div>
                <div class="col-md-2 ">
                    <label>Time</label>
                    <select id="hours" name="hours">
                        <option>00</option>
                        <option>01</option>
                        <option>02</option>
                        <option>03</option>
                        <option>04</option>
                        <option>05</option>
                        <option>06</option>
                        <option>07</option>
                        <option>08</option>
                        <option>09</option>
                        <option>10</option>
                        <option>11</option>
                        <option>12</option>
                        <option>13</option>
                        <option>14</option>
                        <option>15</option>
                        <option>16</option>
                        <option>17</option>
                        <option>18</option>
                        <option>19</option>
                        <option>20</option>
                        <option>21</option>
                        <option>22</option>
                        <option>23</option>
                    </select>
                    <select id="minutes" name="minutes">
                        <option>00</option>
                        <option>05</option>
                        <option>10</option>
                        <option>15</option>
                        <option>20</option>
                        <option>25</option>
                        <option>30</option>
                        <option>35</option>
                        <option>40</option>
                        <option>45</option>
                        <option>50</option>
                        <option>55</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <button id="submit" type="button" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </div>
    </div>

    <div class="tile-body">
        <div id="graph"></div>
        <div id="teemoGraph"></div>
        <table id="championTable" class="table table-striped table-hover hidden">
            <thead>
                <tr>
                    <th>Champion</th>
                    <th>Kills</th>
                    <th>Deaths</th>
                    <th>Assists</th>
                    <th>Double Kills</th>
                    <th>Triple Kills</th>
                    <th>Quadra Kills</th>
                    <th>Penta Kills</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <ul id="championList"></ul>
    </div>
</div>